<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_687"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_3_solid_white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_12"
        android:text="完善老人信息"
        android:textColor="@color/black"
        android:textSize="@dimen/font_14"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_line_top"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/color_e2e3e5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_name_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:text="老人姓名："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_12"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/view_line_top" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="@dimen/dp_222"
        android:layout_height="@dimen/dp_25"
        android:background="@drawable/corners_3_stroke_1_c5c8cb"
        android:gravity="center_vertical"
        android:hint="请输入"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_9"
        android:paddingEnd="@dimen/dp_9"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_bcbcbc"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_hint"
        app:layout_constraintLeft_toRightOf="@id/tv_name_hint"
        app:layout_constraintTop_toTopOf="@id/tv_name_hint" />

    <TextView
        android:id="@+id/tv_id_card_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:text="身份证号："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_12"
        app:layout_constraintRight_toRightOf="@id/tv_name_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_name_hint" />

    <EditText
        android:id="@+id/et_id_card"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_25"
        android:background="@drawable/corners_3_stroke_1_c5c8cb"
        android:gravity="center_vertical"
        android:hint="请输入"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_9"
        android:paddingEnd="@dimen/dp_9"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_bcbcbc"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="@id/tv_id_card_hint"
        app:layout_constraintLeft_toLeftOf="@id/et_name"
        app:layout_constraintRight_toRightOf="@id/et_name"
        app:layout_constraintTop_toTopOf="@id/tv_id_card_hint" />

    <TextView
        android:id="@+id/tv_mobile_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:text="手机号："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_12"
        app:layout_constraintRight_toRightOf="@id/tv_name_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_id_card_hint" />

    <TextView
        android:id="@+id/tv_mobile"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_25"
        android:background="@drawable/corners_3_solid_f8f9fb_stroke_1_c5c8cb"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_9"
        android:paddingEnd="@dimen/dp_9"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="@id/tv_mobile_hint"
        app:layout_constraintLeft_toLeftOf="@id/et_name"
        app:layout_constraintRight_toRightOf="@id/et_name"
        app:layout_constraintTop_toTopOf="@id/tv_mobile_hint" />

    <TextView
        android:id="@+id/tv_address_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:text="居住地址："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_12"
        app:layout_constraintRight_toRightOf="@id/tv_name_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_mobile_hint" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_25"
        android:background="@drawable/corners_3_stroke_1_c5c8cb"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="请选择居住地址"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_9"
        android:paddingEnd="@dimen/dp_9"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_bcbcbc"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="@id/tv_address_hint"
        app:layout_constraintLeft_toLeftOf="@id/et_name"
        app:layout_constraintRight_toRightOf="@id/et_name"
        app:layout_constraintTop_toTopOf="@id/tv_address_hint" />

    <TextView
        android:id="@+id/tv_address_detail_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:text="详细地址："
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="@id/tv_address_hint"
        app:layout_constraintLeft_toRightOf="@id/tv_address"
        app:layout_constraintTop_toTopOf="@id/tv_address_hint" />

    <EditText
        android:id="@+id/et_address_detail"
        android:layout_width="@dimen/dp_222"
        android:layout_height="@dimen/dp_25"
        android:background="@drawable/corners_3_stroke_1_c5c8cb"
        android:gravity="center_vertical"
        android:hint="请输入详细地址"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_9"
        android:paddingEnd="@dimen/dp_9"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_bcbcbc"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="@id/tv_address_hint"
        app:layout_constraintLeft_toRightOf="@id/tv_address_detail_hint"
        app:layout_constraintTop_toTopOf="@id/tv_address_hint" />

    <View
        android:id="@+id/view_line_buttom"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_28"
        android:background="@color/color_e2e3e5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_address_hint" />

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_29"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@drawable/corners_3_solid_ec7220"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/font_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line_buttom" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/corners_3_stroke_1_c5c8cb"
        android:gravity="center"
        android:text="返 回"
        android:textColor="@color/black"
        android:textSize="@dimen/font_10"
        app:layout_constraintRight_toLeftOf="@id/tv_save"
        app:layout_constraintTop_toTopOf="@id/tv_save" />
</androidx.constraintlayout.widget.ConstraintLayout>