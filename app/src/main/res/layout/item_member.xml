<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_13"
    android:layout_marginEnd="@dimen/dp_13"
    android:background="@drawable/corners_3_stroke_1_ebebeb">

    <FrameLayout
        android:id="@+id/fl_head"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_38"
        android:background="@drawable/corners_3_3_0_0_solid_0aec7220"
        android:paddingStart="@dimen/dp_17"
        android:paddingEnd="@dimen/dp_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_card_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_13"
            android:textStyle="bold"
            tools:text="卡号： 201220981" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:text="查看详情"
            android:textColor="@color/color_ec7220"
            android:textSize="@dimen/font_13" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_name_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_13"
        android:text="姓名："
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_head" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_53"
        android:layout_marginEnd="@dimen/dp_13"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_12"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_hint"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/tv_name_hint"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_name_hint"
        tools:text="张琪" />

    <TextView
        android:id="@+id/tv_id_card_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:text="身份证："
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_name_hint" />

    <TextView
        android:id="@+id/tv_id_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_13"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_12"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/tv_id_card_hint"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_id_card_hint"
        tools:text="3301********19223301********1922" />

    <TextView
        android:id="@+id/tv_mobile_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:text="联系方式："
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_id_card_hint" />

    <TextView
        android:id="@+id/tv_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_13"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_12"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/tv_mobile_hint"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_mobile_hint"
        tools:text="13516776364" />

    <TextView
        android:id="@+id/tv_address_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:text="家庭地址："
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_mobile_hint" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_13"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_12"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/tv_address_hint"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_address_hint"
        tools:text="上保社区锦华公寓1102" />

    <TextView
        android:id="@+id/tv_balance_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:text="余额："
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_address_hint" />

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_13"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_12"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/tv_balance_hint"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_balance_hint"
        tools:text="200" />

    <TextView
        android:id="@+id/tv_consumption_amount_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:text="已消费金额："
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_balance_hint" />

    <TextView
        android:id="@+id/tv_consumption_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_13"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_12"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/tv_consumption_amount_hint"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_consumption_amount_hint"
        tools:text="120" />

    <TextView
        android:id="@+id/tv_create_time_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_13"
        android:text="创建时间："
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_consumption_amount_hint" />

    <TextView
        android:id="@+id/tv_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_13"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_12"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/tv_create_time_hint"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toLeftOf="@id/tv_recharge"
        app:layout_constraintTop_toTopOf="@id/tv_create_time_hint"
        tools:text="2022-01-20  10:30" />

    <TextView
        android:id="@+id/tv_recharge"
        android:layout_width="@dimen/dp_66"
        android:layout_height="@dimen/dp_23"
        android:layout_marginEnd="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_11"
        android:background="@drawable/corners_3_solid_ec7220"
        android:gravity="center"
        android:text="充值"
        android:textColor="@color/white"
        android:textSize="@dimen/font_12"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>