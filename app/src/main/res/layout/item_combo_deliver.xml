<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_295"
    android:layout_height="match_parent"
    android:background="@drawable/corners_3_solid_white">

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_34"
        android:layout_marginStart="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_11"
        android:padding="@dimen/dp_10"
        android:src="@drawable/icon_un_check_square"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一荤一素（共4人，已选中1人）"
        android:textColor="@color/color_ec7220"
        android:textSize="@dimen/font_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_check"
        app:layout_constraintLeft_toRightOf="@id/iv_check"
        app:layout_constraintTop_toTopOf="@id/iv_check" />

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/color_e6e6e6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_check" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:text="姓名"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_14"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="62"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintRight_toLeftOf="@id/tv_mobile"
        app:layout_constraintTop_toBottomOf="@id/view_line" />

    <TextView
        android:id="@+id/tv_mobile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="联系电话"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_14"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="101"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintRight_toLeftOf="@id/tv_num"
        app:layout_constraintTop_toTopOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="剩余次数"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_14"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="96"
        app:layout_constraintLeft_toRightOf="@id/tv_mobile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_record"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_7"
        app:layout_constraintBottom_toTopOf="@id/view_line_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <View
        android:id="@+id/view_line_bottom"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginEnd="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_11"
        android:background="@color/color_e6e6e6"
        app:layout_constraintBottom_toTopOf="@id/tv_confirm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="@dimen/dp_101"
        android:layout_height="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_11"
        android:background="@drawable/corners_3_solid_ec7220"
        android:gravity="center"
        android:text="已送餐"
        android:textColor="@color/white"
        android:textSize="@dimen/font_13"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>