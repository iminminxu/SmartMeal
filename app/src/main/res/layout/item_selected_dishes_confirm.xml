<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_13">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_13"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_14"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_quantity"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋番茄鸡蛋" />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_13"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        tools:text="x1" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_13"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="酸辣土豆丝 x1" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:textColor="@color/color_f71413"
        android:textSize="@dimen/font_14"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        app:layout_goneMarginTop="@dimen/dp_2"
        tools:text="¥15.00" />
</androidx.constraintlayout.widget.ConstraintLayout>