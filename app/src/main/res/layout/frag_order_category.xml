<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/color_ec7220"
        app:tabIndicatorHeight="@dimen/dp_1"
        app:tabMaxWidth="0dp"
        app:tabMinWidth="0dp"
        app:tabMode="scrollable"
        app:tabPaddingEnd="@dimen/dp_15"
        app:tabPaddingStart="@dimen/dp_15"
        app:tabSelectedTextColor="@color/color_ec7220"
        app:tabTextAppearance="@style/OrderTabLayoutAppearance"
        app:tabTextColor="@color/color_333333" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f0f2f6" />
</LinearLayout>