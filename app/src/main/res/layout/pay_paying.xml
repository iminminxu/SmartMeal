<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_paying"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corners_0_0_3_3_solid_white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付中..."
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_19"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_81"
        android:layout_marginTop="@dimen/dp_9"
        android:src="@drawable/icon_paying" />
</LinearLayout>