<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_210"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_3_solid_white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_5"
    android:paddingEnd="@dimen/dp_5">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11">

        <EditText
            android:id="@+id/et_discount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_27"
            android:background="@drawable/corners_3_stroke_1_c5c8cb"
            android:gravity="center_vertical"
            android:hint="请输入折扣"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:paddingStart="@dimen/dp_11"
            android:paddingEnd="@dimen/dp_11"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_23"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_2"
            android:background="@drawable/corners_3_solid_ec7220"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/font_13"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_six"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_26"
            android:layout_weight="1"
            android:background="@drawable/corners_3_solid_278cff"
            android:gravity="center"
            android:text="6折"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_five"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_26"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/corners_3_solid_278cff"
            android:gravity="center"
            android:text="5折"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_free"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_26"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/corners_3_solid_278cff"
            android:gravity="center"
            android:text="免单"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>