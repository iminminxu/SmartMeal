<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePreviewInEditMode="false">

        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_identification"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/corners_3_solid_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="250"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cl_unfinished"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_identification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="身份识别"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_identification_line"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_13"
                    android:background="@color/color_e6e6e6"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_identification_title" />

                <TextView
                    android:id="@+id/tv_get_identity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/corners_3_solid_ec7220"
                    android:gravity="center"
                    android:text="人脸识别"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_13"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_mobile_identify"
                    app:layout_constraintTop_toBottomOf="@id/view_identification_line" />

                <TextView
                    android:id="@+id/tv_mobile_identify"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:background="@drawable/corners_3_solid_ec7220"
                    android:gravity="center"
                    android:text="手机号识别"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_13"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintLeft_toRightOf="@id/tv_get_identity"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_get_identity" />

                <TextView
                    android:id="@+id/tv_id_card_input"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_13"
                    android:background="@drawable/corners_3_solid_ec7220"
                    android:gravity="center"
                    android:text="身份证输入"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_13"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/tv_get_identity"
                    app:layout_constraintRight_toRightOf="@id/tv_get_identity"
                    app:layout_constraintTop_toBottomOf="@id/tv_get_identity" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_unfinished"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dp_13"
                android:background="@drawable/corners_3_solid_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="388"
                app:layout_constraintLeft_toRightOf="@id/cl_identification"
                app:layout_constraintRight_toLeftOf="@id/cl_finished"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_unfinished_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="未就餐（4人）"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_unfinished_line"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_13"
                    android:background="@color/color_e6e6e6"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_unfinished_title" />

                <TextView
                    android:id="@+id/tv_unfinished_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="姓名"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_weight="65"
                    app:layout_constraintLeft_toLeftOf="@id/tv_unfinished_title"
                    app:layout_constraintRight_toLeftOf="@id/tv_unfinished_mobile"
                    app:layout_constraintTop_toBottomOf="@id/view_unfinished_line" />

                <TextView
                    android:id="@+id/tv_unfinished_mobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_weight="115"
                    app:layout_constraintLeft_toRightOf="@id/tv_unfinished_name"
                    app:layout_constraintRight_toLeftOf="@id/tv_unfinished_type"
                    app:layout_constraintTop_toTopOf="@id/tv_unfinished_name" />

                <TextView
                    android:id="@+id/tv_unfinished_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="套餐类型"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_weight="82"
                    app:layout_constraintLeft_toRightOf="@id/tv_unfinished_mobile"
                    app:layout_constraintRight_toLeftOf="@id/tv_unfinished_num"
                    app:layout_constraintTop_toTopOf="@id/tv_unfinished_name" />

                <TextView
                    android:id="@+id/tv_unfinished_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="剩余次数"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_weight="110"
                    app:layout_constraintLeft_toRightOf="@id/tv_unfinished_type"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_unfinished_name" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_unfinished"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_unfinished_name" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_finished"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dp_13"
                android:background="@drawable/corners_3_solid_white"
                app:layout_constraintBottom_toTopOf="@id/cl_cancel"
                app:layout_constraintHorizontal_weight="250"
                app:layout_constraintLeft_toRightOf="@id/cl_unfinished"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_finished_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="已就餐（3人）"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_finished_line"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_13"
                    android:background="@color/color_e6e6e6"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_finished_title" />

                <TextView
                    android:id="@+id/tv_finished_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="姓名"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/tv_finished_title"
                    app:layout_constraintTop_toBottomOf="@id/view_finished_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="套餐类型"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_finished_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:text="就餐时间"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_finished_name" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_finished"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_finished_name" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_cancel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_13"
                android:background="@drawable/corners_3_solid_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/cl_finished"
                app:layout_constraintRight_toRightOf="@id/cl_finished"
                app:layout_constraintTop_toBottomOf="@id/cl_finished">

                <TextView
                    android:id="@+id/tv_cancel_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="已请假（3人）"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_cancel_line"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_13"
                    android:background="@color/color_e6e6e6"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_cancel_title" />

                <TextView
                    android:id="@+id/tv_cancel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="姓名"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@id/tv_cancel_title"
                    app:layout_constraintTop_toBottomOf="@id/view_cancel_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="套餐类型"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_cancel_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_13"
                    android:text="请假时间"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_cancel_name" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_cancel"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/dp_5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_cancel_name" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</FrameLayout>